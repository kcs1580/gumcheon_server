<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="rptPjt.com.mapper.UserMapper">

	
	<delete id="deleteUser"> delete from user where id=#{id}</delete>
	
	<select id="selectUsers" resultType="rptPjt.com.model.UserVO">
	SELECT id, username,  password FROM user
	</select>
	
	<select id="findById" resultType="rptPjt.com.model.UserVO">
	SELECT id, password, username FROM user where id=#{id}</select>
	
		<select id="findByUsername" resultType="rptPjt.com.model.UserVO">
	SELECT id, password, username FROM user where username=#{username}</select>
	
</mapper>